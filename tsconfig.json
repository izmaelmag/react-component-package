{
    "compilerOptions": {
        "jsx": "react",
        "target": "ES5",
        "module": "ESNext",
        "sourceMap": true,
        "outDir": "dist",
        "strict": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "declarationDir": "types",
        "emitDeclarationOnly": true
    },
    "include": ["./src"]
}